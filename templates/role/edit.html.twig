{% extends 'base.html.twig' %}

{% block title %} Редактировать роль {% endblock %}
{% block header %} Редактировать роль {% endblock %}
{% block body %}

	<a href="{{ path('role_list') }}">Назад к ролям</a>
	<br><br>
	{% if error %}
		<div class="message-error">{{ error }}</div>
	{% endif %}

	<form method='post' action='{{ path('role_edit', {'id': role.id }) }}'>
		<label><input type='text' name='role' value='{{ role.role }}'></label>
		<input type='hidden' name='_csrf_token' value='{{ csrf_token() }}'>
		<input type='submit' name='submit_role_edit' value='Редактировать роль'>
	</form>

{% endblock %}