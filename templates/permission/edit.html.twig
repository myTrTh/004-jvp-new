{% extends 'base.html.twig' %}

{% block title %} Редактировать разрешение {% endblock %}
{% block header %} Редактировать разрешение {% endblock %}
{% block body %}

	<a href="{{ path('permission_list') }}">Назад к разрешениям</a>
	<br><br>
	{% if error %}
		<div class="message-error">{{ error }}</div>
	{% endif %}

	<form method='post' action='{{ path('permission_edit', {'id': permission.id }) }}'>
		<label><input type='text' name='permission' value='{{ permission.permission }}'></label>
		<label><input type='text' name='description' value='{{ permission.description }}'></label>
		<input type='hidden' name='_csrf_token' value='{{ csrf_token() }}'>
		<input type='submit' name='submit_permission_edit' value='Редактировать разрешение'>
	</form>

{% endblock %}